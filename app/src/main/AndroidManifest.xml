                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.is4300.homez.activity.DashboardActivity" />
        </activity>
        <activity
            android:name=".activity.calendar.CalendarActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_calendar"
            android:parentActivityName=".activity.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.is4300.homez.activity.DashboardActivity" />
        </activity>
        <activity
            android:name=".activity.billsplit.BillSplitActivity"
            android:screenOrientation="portrait"
