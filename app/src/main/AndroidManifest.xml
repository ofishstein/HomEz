                android:value="com.is4300.homez.activity.calendar.CalendarActivity" />
        </activity>
        <activity android:name=".activity.calendar.EditEventActivity"
            android:label="Edit Event"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.calendar.CalendarActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
