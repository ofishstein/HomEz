            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.is4300.homez.activity.DashboardActivity" />
        </activity>
        <activity
            android:name=".activity.settings.PersonalSettingsActivity"
            android:label="Personal Settings"
            android:screenOrientation="portrait"
            android:parentActivityName=".activity.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.is4300.homez.activity.DashboardActivity" />
        </activity>
        <activity
            android:name=".activity.onboarding.HouseActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_house"
