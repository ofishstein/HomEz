                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.is4300.homez.activity.DashboardActivity" />
        </activity>
        <activity
            android:name=".activity.billsplit.BillSplitCreateActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_bill_split_create"
            android:parentActivityName=".activity.DashboardActivity"
