<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:paddingBottom="@dimen/sm_margin"
    android:paddingTop="@dimen/sm_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/sm_margin"
        android:paddingTop="@dimen/sm_margin">

        <TextView
            android:id="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Chore Item" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView3"
            android:id="@+id/assignee"
            android:textStyle="italic"
            android:textColor="@color/lightGrey2"
            android:layout_width="match_parent"
            android:lines="1"
            android:lineSpacingExtra="@dimen/sm_margin"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:text="Assignee" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/remindButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/customButton"
        android:text="@string/remind" />

</LinearLayout>