<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.is4300.homez.activity.billsplit.BillSplitActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="247dp">

        <EditText
            android:id="@+id/editText0"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:text="11/16" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:ems="10"
            android:inputType="date"
            android:text="11/02"
            tools:layout_editor_absoluteX="346dp"
            tools:layout_editor_absoluteY="100dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:ems="10"
            android:inputType="date"
            android:text="11/12" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_column="17"
            android:layout_row="0"
            android:ems="10"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_column="17"
            android:layout_row="1"
            android:ems="10"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_column="17"
            android:layout_row="2"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="18"
            android:layout_row="0"
            android:text="PAY" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="18"
            android:layout_row="1"
            android:text="PAY" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="18"
            android:layout_row="2"
            android:text="REMIND" />

    </GridLayout>

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="257dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="249dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Transactions"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text|textPersonName"
            android:text="Johnny paid you $32 for diy"
            android:textColor="@color/lightGrey2" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Lorem Ipsum paid you $5 for u"
            android:textColor="@color/lightGrey2" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Lorem Ipsum charged you $44 for x"
            android:textColor="@color/lightGrey2" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Lady luck charged you $12 for rent"
            android:textColor="@color/lightGrey2" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See more..." />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>



